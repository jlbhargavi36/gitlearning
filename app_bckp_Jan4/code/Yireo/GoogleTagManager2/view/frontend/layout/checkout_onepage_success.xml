<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block template="Yireo_GoogleTagManager2::success.phtml"
                   name="googletagmanager_success"
                   before="googletagmanager_script">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Yireo\GoogleTagManager2\ViewModel\Success</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
