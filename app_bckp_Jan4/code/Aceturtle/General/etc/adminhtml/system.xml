<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="aceturtle_twilio" translate="label" sortOrder="101">
            <label>Twilio</label>
        </tab>
        <section id="twilio" translate="label" sortOrder="500" showInDefault="1" showInWebsite="0" showInStore="0">
            <class>separator-top</class>
            <label>Twilio</label>
            <tab>aceturtle_twilio</tab>
            <resource>Aceturtle_General::twilio_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

		<field id="enable_otp_varification" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Sign-in OTP Varification </label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
		<field id="enable_otp_login" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>OTP Login Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="account_sid" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Account SID</label>
                </field>
                <field id="auth_token" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Auth Token</label>
                </field>
                <field id="twilio_number" translate="lable" type="text" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Twilio Number</label>
                </field>
                <field id="otp_message" translate="label" type="textarea" sortOrder="5" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Message</label>
                    <comment><![CDATA[Use {{otp}} variable for otp.]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>
