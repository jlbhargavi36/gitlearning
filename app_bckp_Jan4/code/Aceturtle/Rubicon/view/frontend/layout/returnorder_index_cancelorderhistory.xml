<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd"> 
<update handle="customer_account"/> 

<body> 
    <referenceContainer name="page.messages">
        <block class="Magento\Framework\View\Element\Messages" name="messages" as="messages"/>
    </referenceContainer>

    <referenceBlock name="page.main.title"> 
            <action method="setPageTitle"> 
                <argument translate="true" name="title" xsi:type="string">Cancel Order Details</argument> 
            </action>  
     </referenceBlock> 
     <referenceContainer name="content"> 
        <block class="Aceturtle\Rubicon\Block\Cancelorder" name="returnorder" template="Aceturtle_Rubicon::order/cancelorderhistory.phtml" cacheable="false"> 
        </block> 
    </referenceContainer> 
</body> 
</page>
